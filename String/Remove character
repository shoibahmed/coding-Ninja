public class Solution {

	public static String removeAllOccurrencesOfChar(String str, char ch) {
		// Your code goes here
		StringBuffer strr = new StringBuffer(str);
		int i=0;
		while(i!=strr.length()){
			if((strr.charAt(i)==ch)){
				strr.delete(i,i+1);
			}else{
				i++;
			}
		}
		String ans=new String(strr);
		return ans;
	}

}
